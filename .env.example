# ============================================
# FIREBASE CONFIGURATION
# ============================================

# Option 1: Full Firebase Service Account JSON (for development)
# Get this from Firebase Console > Project Settings > Service Accounts > Node.js
# Copy the entire JSON and set as base64 or plain JSON string
FIREBASE_SERVICE_ACCOUNT_KEY='{"type":"service_account","project_id":"your-project-id",...}'

# Option 2: Individual Firebase credentials (for production/Vercel)
# Use these environment variables on platforms that don't support complex JSON
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxx@your-project-id.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=123456789

# Firebase Web API Key (for client-side Firebase initialization)
VITE_FIREBASE_API_KEY=your-web-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id

# ============================================
# SECURITY & CORS
# ============================================

# Allowed CORS origins (comma-separated)
# Production: https://yourdomain.com,https://www.yourdomain.com
# Development: http://localhost:5173,http://localhost:8080
CORS_ORIGINS=http://localhost:5173,http://localhost:8080

# Application URL (for security headers)
APP_URL=http://localhost:8080
# Production: https://yourdomain.com

# ============================================
# RATE LIMITING & PERFORMANCE
# ============================================

# Redis configuration (for production rate limiting)
# Leave empty to use in-memory store (development only)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Rate limiting: max requests per minute per IP
RATE_LIMIT_GLOBAL=100

# Rate limiting: max requests per minute for admin operations
RATE_LIMIT_ADMIN=10

# Rate limiting: max requests per minute for AI chat
RATE_LIMIT_AI_CHAT=10

# ============================================
# EXTERNAL SERVICES
# ============================================

# Sentry error tracking (optional)
SENTRY_DSN=https://key@sentry.io/projectid
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# AI Chat API (OpenRouter or similar)
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# ============================================
# MONITORING & LOGGING
# ============================================

# Log retention policy (days)
LOG_RETENTION_DAYS=90

# Enable debug logging
DEBUG=false

# ============================================
# DEVELOPMENT
# ============================================

# App environment
NODE_ENV=development

# Dev server port
VITE_PORT=5173
SERVER_PORT=8080

# Ping message for health check
PING_MESSAGE=pong
